<Window x:Class="WPFOpenFileDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFOpenFileDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        
        <!--Insert data-->

        <Button Name="btnOpen" Width="300" Height="100" Content="Open" FontSize="40" FontWeight="Light"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Click="Click_btnOpen"/>

        
        <TextBox Name="tbMessage" Grid.Row="1"  Width="600" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center"
                 HorizontalContentAlignment="Center" TextAlignment="Center" FontSize="16" FontWeight="Light" 
                 VerticalContentAlignment="Center" BorderThickness="0"/>



    </Grid>
</Window>
