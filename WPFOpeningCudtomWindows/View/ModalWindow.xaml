<Window x:Class="WPFOpeningCudtomWindows.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFOpeningCudtomWindows.View"
        mc:Ignorable="d"
        Title="ModalWindow" Height="150" Width="250"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner">
    
    
    <!-- Set window style to none to avoid showing the min, max and close buttons-->
    <Grid>
        <StackPanel  VerticalAlignment="Center" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox Name="txtInput" Width="200"  Height="40" Margin="5" TextChanged="Click_textChanged" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="btnOK" Content="OK" Width="50" Height="40" Margin="2" Click="Click_btnOK" IsEnabled="False" />
                <Button x:Name="btnCancel" Content="Cancel" Width="50" Height="40" Margin="2" Click="Click_btnCancel" />
            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
